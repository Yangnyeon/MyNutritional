<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="cloths"
            type="com.example.nutritionalrecom.nutCommunity.Vlog_Model" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="380sp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:layout_marginTop="20sp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150sp"
            android:orientation="horizontal"
            android:background="@drawable/note"
            >

            <TextView
                android:id="@+id/item_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="22sp"
                android:text="@{cloths.content}"
                android:layout_marginTop="30sp"
                android:layout_marginLeft="33sp"
                android:textStyle="bold"
                android:fontFamily="@font/jua"
                android:textColor="#000000"
                ></TextView>


        </LinearLayout>





        <ImageView
            android:id="@+id/delete"
            android:layout_width="wrap_content"
            android:layout_height="30sp"
            android:layout_marginLeft="310sp"
            android:layout_marginTop="25sp"
            android:src="@drawable/ic_baseline_restore_from_trash_24">
        </ImageView>

        <TextView
            android:id="@+id/item_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="@{cloths.time}"
            android:layout_marginTop="110sp"
            android:layout_marginLeft="33sp"
            android:fontFamily="@font/jua"
            android:textColor="#000000"
            ></TextView>





    </androidx.cardview.widget.CardView>

</layout>


