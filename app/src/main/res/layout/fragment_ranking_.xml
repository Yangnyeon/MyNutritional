<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".ranking_Fagment.ranking_Fragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="280sp"
                android:background="@drawable/gradient_purple"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="80sp"
                    android:layout_height="80sp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="10sp"
                    android:src="@drawable/trophy">
                </ImageView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="130sp"
                    android:fontFamily="@font/jua"
                    android:textColor="#FFFFFF"
                    android:textSize="24sp"></TextView>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="100sp"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="300sp"
                    android:gravity="center"
                    android:orientation="horizontal">


                    <androidx.cardview.widget.CardView
                        android:id="@+id/gogo_community1"
                        android:layout_width="125sp"
                        android:layout_height="200sp"
                        android:layout_gravity="left"
                        android:layout_marginTop="80sp"
                        app:cardCornerRadius="16sp">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="200sp"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/third_Image"
                                android:layout_width="60sp"
                                android:layout_height="60sp"
                                android:layout_gravity="center"
                                android:layout_marginTop="20sp"
                                android:src="@drawable/baseline_photo_24"></ImageView>

                            <TextView
                                android:id="@+id/third_Id"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="20sp"
                                android:fontFamily="@font/jua"
                                android:text="닉네임"
                                android:textSize="22sp"
                                android:textStyle="bold"></TextView>

                            <TextView
                                android:id="@+id/third_RunCount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="20sp"
                                android:fontFamily="@font/jua"
                                android:text="1"
                                android:textColor="@color/purple_200"
                                android:textSize="22sp"
                                android:textStyle="bold"></TextView>
                        </LinearLayout>


                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/gogo_community2"
                        android:layout_width="125sp"
                        android:layout_height="200sp"
                        android:layout_gravity="center"
                        app:cardCornerRadius="16sp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="200sp"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/winner_Image"
                                android:layout_width="60sp"
                                android:layout_height="60sp"
                                android:layout_gravity="center"
                                android:layout_marginTop="20sp"
                                android:src="@drawable/baseline_photo_24"></ImageView>

                            <TextView
                                android:id="@+id/winner_Id"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="20sp"
                                android:fontFamily="@font/jua"
                                android:text="닉네임"
                                android:textSize="22sp"
                                android:textStyle="bold"></TextView>

                            <TextView
                                android:id="@+id/winner_RunCount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="20sp"
                                android:fontFamily="@font/jua"
                                android:text="1"
                                android:textColor="@color/purple_200"
                                android:textSize="22sp"
                                android:textStyle="bold"></TextView>


                        </LinearLayout>


                    </androidx.cardview.widget.CardView>



                    <androidx.cardview.widget.CardView
                        android:id="@+id/gogo_community"
                        android:layout_width="125sp"
                        android:layout_height="200sp"
                        android:layout_gravity="right"
                        android:layout_marginTop="70sp"
                        app:cardCornerRadius="16sp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="200sp"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/second_Image"
                                android:layout_width="60sp"
                                android:layout_height="60sp"
                                android:layout_gravity="center"
                                android:layout_marginTop="20sp"
                                android:src="@drawable/baseline_photo_24"></ImageView>


                            <TextView
                                android:id="@+id/second_Id"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="20sp"
                                android:fontFamily="@font/jua"
                                android:text="닉네임"
                                android:textSize="22sp"
                                android:textStyle="bold"></TextView>

                            <TextView
                                android:id="@+id/second_RunCount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="20sp"
                                android:fontFamily="@font/jua"
                                android:text="1"
                                android:textColor="@color/purple_200"
                                android:textSize="22sp"
                                android:textStyle="bold"></TextView>


                        </LinearLayout>


                    </androidx.cardview.widget.CardView>

                    <ImageView
                        android:layout_width="50sp"
                        android:layout_height="50sp"
                        android:src="@drawable/number_3"
                        android:layout_gravity="left"
                        android:layout_marginLeft="32sp"
                        android:layout_marginTop="26sp"
                        ></ImageView>

                    <ImageView
                        android:layout_width="50sp"
                        android:layout_height="50sp"
                        android:src="@drawable/number_1"
                        android:layout_gravity="center|top"
                        ></ImageView>

                    <ImageView
                        android:layout_width="50sp"
                        android:layout_height="50sp"
                        android:src="@drawable/number_2"
                        android:layout_gravity="right"
                        android:layout_marginRight="42sp"
                        android:layout_marginTop="16sp"
                        ></ImageView>


                </FrameLayout>



                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/ranking_RecyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:overScrollMode="never"></androidx.recyclerview.widget.RecyclerView>


                </RelativeLayout>
                Ω¸
            </LinearLayout>


        </FrameLayout>


    </ScrollView>


</FrameLayout>