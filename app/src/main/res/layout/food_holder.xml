<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>

        <variable
            name="fooddata"
            type="com.example.nutritionalrecom.nutTypes.Items" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3sp"
        android:background="#000000"
        android:layout_gravity="center"
        android:layout_margin="8sp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="240sp"
            android:orientation="vertical"
            android:background="@drawable/holder_bace"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16sp"
                android:layout_marginTop="30sp"
                android:text='@{"식품 이름 : " + fooddata.DESC_KOR}'
                android:fontFamily="@font/jua"
                android:textSize="28sp"
                android:textColor="#673AB7"
                android:id="@+id/DESC_KOR" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16sp"
                android:text='@{"1회제공량 : " + fooddata.SERVING_WT + "g"}'
                android:fontFamily="@font/jua"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:layout_marginTop="10sp"
                android:id="@+id/SERVING_WT"
                ></TextView>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16sp"
                android:text='@{"칼로리 : " + fooddata.NUTR_CONT1 + "kcal"}'
                android:fontFamily="@font/jua"
                android:textSize="20sp"
                android:textColor="#E80303"
                android:layout_marginTop="10sp"
                android:id="@+id/NUTR_CONT1"
                ></TextView>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16sp"
                android:text='@{"단백질 : " + fooddata.NUTR_CONT3 + "g"}'
                android:fontFamily="@font/jua"
                android:textSize="20sp"
                android:textColor="#8BC34A"
                android:layout_marginTop="10sp"
                android:id="@+id/NUTR_CONT3"
                ></TextView>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16sp"
                android:text='@{"당류 : " + fooddata.NUTR_CONT5 + "g"}'
                android:fontFamily="@font/jua"
                android:textSize="20sp"
                android:textColor="#FFFFFF"
                android:layout_marginTop="10sp"
                android:id="@+id/NUTR_CONT4"
                ></TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16sp"
                android:layout_marginTop="10sp"
                android:text='@{"콜레스테롤 : " + fooddata.NUTR_CONT7 + "mg"}'
                android:fontFamily="@font/jua"
                android:textSize="20sp"
                android:textColor="#3F51B5"
                android:id="@+id/NUTR_CONT7"
                ></TextView>

        </LinearLayout>






    </androidx.cardview.widget.CardView>
</layout>